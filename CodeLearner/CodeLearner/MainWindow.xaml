<Window x:Class="CodeLearner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodeLearner"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <ScrollViewer>
            <StackPanel x:Name="stkNames" ></StackPanel>
        </ScrollViewer>
        <Button x:Name="btnGetNames" Content="Get Names" Grid.Column="1" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="btnGetNames_Click"/>
        <TextBox x:Name="txtPersonID" Grid.Column="1" HorizontalAlignment="Left" Height="24" Margin="35,49,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="29"/>
        <Button x:Name="btnGetPerson" Content="Get Person" Grid.Column="1" HorizontalAlignment="Left" Margin="69,49,0,0" VerticalAlignment="Top" Width="74" Click="btnGetPerson_Click"/>
        <Button x:Name="btnAdd" Content="Add Bob" Grid.Column="2" HorizontalAlignment="Left" Margin="54,116,0,0" VerticalAlignment="Top" Width="76" Click="btnAdd_Click"/>
    </Grid>
</Window>
